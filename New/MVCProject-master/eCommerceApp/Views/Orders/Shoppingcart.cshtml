@using eCommerceApp.ViewModels
@model ShoppingCartViewModel

@{
    ViewData["Title"] = "Shopping Cart Summary";
}



<div class = "row" >

    <div class = "col-md-8 offset-2">

         <div class = "text-center">

             <h2>
                 Your Shopping Cart Summary
             </h2>

        </div>


        <table class="table table-hover table-info">
  <thead>
    <tr>
      <th scope="col">Slected Amount </th>
      <th scope="col">Movie </th>
      <th scope="col">Price </th>
      <th scope="col">SubTotal </th>
      <th scope="col">Add Product</th>
      <th scope="col">Remove Product</th>
    </tr>
  </thead>
  <tbody>

    @foreach (var item in Model.ShoppingCart.ShoppingCartItems)
   {
    <tr>
        <td class = "align-middle">@item.Amount</td>
        <td class = "align-middle">@item.Product.ProductName</td>
        <td class = "align-middle">@item.Product.ProductPrice</td>
        <td class = "align-middle">@((item.Amount*item.Product.ProductPrice).ToString("c"))</td>
        <td class = "align-middle">
              <a class = "btn btn-success" asp-controller = "Orders" asp-action = "AddToShoppingCart" asp-route-id ="@item.Product.ProductID">
                  Add
             </a>
        </td>
        <td class = "align-middle">
            <a class = "btn btn-danger" asp-controller = "Orders" asp-action = "DeleteItemFromShoppingCart" asp-route-id ="@item.Product.ProductID">
                Remove
            </a>
        </td>

    </tr>   
   }

  </tbody>

  <tfoot>
      <tr>
          <td  >
               <b>
                   Total:
               </b>
          </td>
          <td >
             @Model.ShoppingCartTotal.ToString("c")
          </td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
      </tr>
  </tfoot>

</table>

<div class = "text-center">

    <div class = "btn-group">

        <a class="btn btn-outline-info" asp-controller = "Product" asp-action = "index">

            Add More Items
            Product
        </a>
        
    </div>

</div>








    </div>

</div>




























