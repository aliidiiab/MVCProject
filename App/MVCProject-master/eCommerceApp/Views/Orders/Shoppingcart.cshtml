@using eCommerceApp.ViewModels
@model ShoppingCartViewModel

@{
    ViewData["Title"] = "Shopping Cart Summary";
}



<div class = "row" >

    <div class = "col-md-8 offset-2">

         <div class = "text-center">

             <h2>
                 Your Shopping Cart Summary
             </h2>

        </div>


        <table class="table table-hover table-info">
  <thead>
    <tr>
      <th scope="col">Slected Amount </th>
      <th scope="col">Movie </th>
      <th scope="col">Price </th>
      <th scope="col">SubTotal </th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>

    @foreach (var item in Model.ShoppingCart.ShoppingCartItems)
   {
    <tr>
        <td class = "align-middle">@item.Amount</td>
        <td class = "align-middle">@item.Product.ProductName</td>
        <td class = "align-middle">@item.Product.ProductPrice</td>
        <td class = "align-middle">@item.Amount * @item.Product.ProductPrice</td>
        <td class = "align-middle">
          <a class = "text-danger" asp-controller = "Orders" asp-action = "AddItemToCart" asp-route-id ="@item.Product.ProductID">
              <i class = "bi bi-cart-dash"></i>
         </a>
        </td>
        <td class = "align-middle">
            <a class = "text-danger" asp-controller = "Orders" asp-action = "RemoveItemFromCart" asp-route-id ="@item.Product.ProductID">
                <i class = "bi bi-cart-plus"></i>

            </a>
        </td>

    </tr>   
   }

  </tbody>

  <tfoot>
      <tr>
          <td colspan = "2" >
               <b>
                   Total:
               </b>
          </td>
          <td >
             @Model.ShoppingCartTotal.ToString("c")
          </td>

      </tr>
  </tfoot>

</table>

<div class = "text-center">

    <div class = "btn-group">

        <a class="btn btn-outline-info" asp-controller = "Product" asp-action = "index">

            Add More Items
            Product
        </a>
        
    </div>

</div>








    </div>

</div>




























