@model Product

@{
    ViewData["Title"] = "addProduct";
}

<h1>Add Product</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="saveaddproduct"asp-controller="product"asp-route-id="@Model.ProductID" >
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductDescreption" class="control-label"></label>
                <textarea asp-for="ProductDescreption" class="form-control" ></textarea>
                <span asp-validation-for="ProductDescreption" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductPrice" class="control-label"></label>
                <input asp-for="ProductPrice" class="form-control" />
                <span asp-validation-for="ProductPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductImage" class="control-label"></label>
                <input type="file" asp-for="ProductImage" class="form-control" />
                <span asp-validation-for="ProductImage" class="text-danger"></span>
            </div>

            @*Select Category Section*@
            <label class="control-label">Select Category</label>
            <select class="form-control" name="CategoryId" id="CategoryId">
           @foreach (Category item in ViewBag.categories)
           {
                if(item.CategoryId==Model.CategoryID){
                    <option value="@item.CategoryId" selected>@item.CategoryName</option>
                }else{
                    <option value="@item.CategoryId">@item.CategoryName</option>
                }
            }
            </select>

            <div class="form-group">
                <label asp-for="DateCreated" class="control-label"></label>
                <input asp-for="DateCreated" class="form-control" />
                <span asp-validation-for="DateCreated" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Product" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
